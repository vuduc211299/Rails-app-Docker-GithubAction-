<h1>Meow images</h1>

<%= link_to 'Create new image', new_image_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
      <th>Image</th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.title %></td>
        <td><%= image.description %></td>
        <td><img width='50px' hight='50px' src="<%= image.signed_url %>" alt="Image from S3"><td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_to 'Sign out', destroy_user_session_path, method: :delete %>

